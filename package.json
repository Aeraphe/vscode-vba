{
    "name": "vba",
    "displayName": "VSCode VBA",
    "description": "VBA language syntax highlighting support and code snippets for VSCode",
    "version": "1.0.3",
    "icon": "images/logo.png",
    "publisher": "spences10",
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/luggage66/vscode-vba.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "vba",
                "aliases": [
                    "VBA",
                    "vba"
                ],
                "extensions": [
                    ".bas",
                    ".cls",
                    ".frm",
                    ".sht",
                    ".wbk"
                ],
                "configuration": "./vba.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vba",
                "scopeName": "source.vba",
                "path": "./syntaxes/vba.json"
            }
        ],
        "snippets": [
            {
                "language": "vba",
                "path": "./snippets/vba.json"
            }
        ]
    }
}